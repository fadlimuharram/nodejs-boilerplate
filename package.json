{
  "name": "boilerplate-bookapp",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "init": "sequelize db:migrate:undo:all  && sequelize db:migrate && npm run build",
    "dev": "nodemon --exec babel-node ./api/index.js",
    "test": "export NODE_ENV=test &&  sequelize db:migrate:undo:all  && sequelize db:migrate && npm run build  && nyc --require @babel/register --reporter=lcov --reporter=text-lcov  mocha ./api/test/index.test.js --timeout 20000 --exit",
    "test-coverage-open": "open coverage/lcov-report/index.html",
    "build": "rm -rf ./build && babel -d ./build ./api -s && cp ./api/server/utils/jwt/{private.key,public.key} ./build/server/utils/jwt/",
    "generate-lcov": "nyc report --reporter=text-lcov > lcov.info",
    "coveralls-coverage": "coveralls < lcov.info",
    "codeclimate-coverage": "codeclimate-test-reporter < lcov.info",
    "coverage": "nyc npm test && npm run generate-lcov && npm run coveralls-coverage && npm run codeclimate-coverage",
    "init-sequelize": "export NODE_ENV=test && sequelize db:migrate:undo:all  && sequelize db:migrate && npm run build",
    "test-istanbul": "istanbul cover node_modules/.bin/_mocha -- -- -u exports -R spec ./api/test/**/*",
    "test-jwt": "nodemon --exec babel-node ./api/server/utils/jwt/ex.js"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^3.0.6",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "dotenv": "^8.0.0",
    "express": "^4.17.1",
    "jsonwebtoken": "^9.0.0",
    "morgan": "^1.9.1",
    "mysql2": "^1.6.5",
    "passport": "^0.4.0",
    "passport-google-oauth20": "^2.0.0",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "path": "^0.12.7",
    "redis": "^2.8.0",
    "sequelize": "^5.9.0",
    "should": "^13.2.3"
  },
  "devDependencies": {
    "@babel/cli": "^7.4.4",
    "@babel/core": "^7.4.5",
    "@babel/node": "^7.4.5",
    "@babel/plugin-transform-runtime": "^7.4.4",
    "@babel/preset-env": "^7.4.5",
    "@babel/register": "^7.4.4",
    "@babel/runtime": "^7.4.5",
    "babel-loader": "^8.0.6",
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "istanbul": "^0.4.5",
    "mocha": "^6.1.4",
    "nyc": "^14.1.1"
  }
}